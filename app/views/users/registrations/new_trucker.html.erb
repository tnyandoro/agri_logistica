<div class="min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-3xl mx-auto">
    <div class="text-center mb-8">
      <h2 class="text-3xl font-bold text-gray-900">Trucker Registration</h2>
      <p class="mt-2 text-sm text-gray-600">Join our logistics network</p>
    </div>

    <div class="bg-white shadow-md rounded-lg p-8">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <!-- Hidden field for user role -->
        <%= f.hidden_field :user_role, value: 'trucker' %>

        <!-- Account Information -->
        <div class="mb-8">
          <h3 class="text-xl font-semibold text-gray-800 mb-4 pb-2 border-b">Account Information</h3>
          
          <div class="space-y-4">
            <div>
              <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", 
                  class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
            </div>

            <div>
              <%= f.label :phone_number, "Phone Number", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= f.telephone_field :phone_number, autocomplete: "tel", 
                  class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500",
                  placeholder: "+27 XX XXX XXXX" %>
            </div>

            <div>
              <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= f.password_field :password, autocomplete: "new-password", 
                  class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
              <% if @minimum_password_length %>
                <p class="mt-1 text-xs text-gray-500"><%= @minimum_password_length %> characters minimum</p>
              <% end %>
            </div>

            <div>
              <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", 
                  class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
            </div>
          </div>
        </div>

        <!-- Company Information -->
        <%= f.fields_for :trucking_company do |tc| %>
          <div class="mb-8">
            <h3 class="text-xl font-semibold text-gray-800 mb-4 pb-2 border-b">Company Information</h3>
            
            <div class="space-y-4">
              <div>
                <%= tc.label :company_name, class: "block text-sm font-medium text-gray-700 mb-1" %>
                <%= tc.text_field :company_name, 
                    class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500",
                    placeholder: "ABC Logistics (Pty) Ltd" %>
              </div>

              <div>
                <%= tc.label :contact_person, class: "block text-sm font-medium text-gray-700 mb-1" %>
                <%= tc.text_field :contact_person, 
                    class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500",
                    placeholder: "John Doe" %>
              </div>

              <div>
                <%= tc.label :fleet_size, "Fleet Size", class: "block text-sm font-medium text-gray-700 mb-1" %>
                <%= tc.number_field :fleet_size, 
                    class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500",
                    placeholder: "5", min: 1 %>
              </div>

              <div>
                <%= tc.label :vehicle_types, "Vehicle Types", class: "block text-sm font-medium text-gray-700 mb-1" %>
                <div class="grid grid-cols-2 gap-2 mt-2">
                  <% TruckingCompany::VEHICLE_TYPES.each do |vehicle_type| %>
                    <label class="flex items-center space-x-2">
                      <%= tc.check_box :vehicle_types, 
                          { multiple: true, class: "rounded border-gray-300 text-blue-600 focus:ring-blue-500" }, 
                          vehicle_type, nil %>
                      <span class="text-sm text-gray-700"><%= vehicle_type %></span>
                    </label>
                  <% end %>
                </div>
              </div>

              <div>
                <%= tc.label :registration_numbers, "Vehicle Registration Numbers", class: "block text-sm font-medium text-gray-700 mb-1" %>
                <%= tc.text_area :registration_numbers, 
                    class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500",
                    rows: 4,
                    placeholder: "Enter one registration number per line:\nABC123GP\nXYZ789GP" %>
                <p class="mt-1 text-xs text-gray-500">Enter one registration number per line</p>
              </div>

              <div>
                <%= tc.label :insurance_details, class: "block text-sm font-medium text-gray-700 mb-1" %>
                <%= tc.text_area :insurance_details, 
                    class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500",
                    rows: 3,
                    placeholder: "Insurance company, policy number, coverage details..." %>
              </div>
            </div>
          </div>

          <!-- Routes Section -->
          <div class="mb-8">
            <h3 class="text-xl font-semibold text-gray-800 mb-4 pb-2 border-b">Routes</h3>
            <div id="routes-container" class="space-y-4">
              <div class="route-item p-4 bg-gray-50 rounded-md">
                <%= tc.fields_for :routes, Array.new(1) do |route| %>
                  <div class="grid grid-cols-1 md:grid-cols-3 gap-3">
                    <div>
                      <%= route.label :from, class: "block text-sm font-medium text-gray-700 mb-1" %>
                      <%= route.text_field :from, 
                          class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500",
                          placeholder: "Johannesburg" %>
                    </div>
                    <div>
                      <%= route.label :to, class: "block text-sm font-medium text-gray-700 mb-1" %>
                      <%= route.text_field :to, 
                          class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500",
                          placeholder: "Cape Town" %>
                    </div>
                    <div>
                      <%= route.label :distance, "Distance (km)", class: "block text-sm font-medium text-gray-700 mb-1" %>
                      <%= route.number_field :distance, 
                          class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500",
                          placeholder: "1400", min: 0 %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
            <button type="button" onclick="addRoute()" class="mt-3 text-sm text-blue-600 hover:text-blue-800">
              + Add Another Route
            </button>
          </div>

          <!-- Rates Section -->
          <div class="mb-8">
            <h3 class="text-xl font-semibold text-gray-800 mb-4 pb-2 border-b">Rates</h3>
            <div id="rates-container" class="space-y-4">
              <div class="rate-item p-4 bg-gray-50 rounded-md">
                <%= tc.fields_for :rates, Array.new(1) do |rate| %>
                  <div class="grid grid-cols-1 md:grid-cols-3 gap-3">
                    <div>
                      <%= rate.label :type, "Rate Type", class: "block text-sm font-medium text-gray-700 mb-1" %>
                      <%= rate.select :type, 
                          [['Per Kilometer', 'per_km'], ['Flat Rate', 'flat'], ['Hourly', 'hourly']], 
                          { prompt: 'Select type' },
                          class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
                    </div>
                    <div>
                      <%= rate.label :rate, "Rate Amount", class: "block text-sm font-medium text-gray-700 mb-1" %>
                      <%= rate.number_field :rate, 
                          class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500",
                          placeholder: "2.50", step: 0.01, min: 0 %>
                    </div>
                    <div>
                      <%= rate.label :currency, class: "block text-sm font-medium text-gray-700 mb-1" %>
                      <%= rate.select :currency, 
                          [['ZAR (R)', 'ZAR'], ['USD ($)', 'USD']], 
                          { selected: 'ZAR' },
                          class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
            <button type="button" onclick="addRate()" class="mt-3 text-sm text-blue-600 hover:text-blue-800">
              + Add Another Rate
            </button>
          </div>
        <% end %>

        <!-- Submit Button -->
        <div class="flex items-center justify-between pt-6 border-t">
          <%= f.submit "Register", class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-4 rounded-md transition duration-200 cursor-pointer" %>
        </div>

        <!-- Sign in link -->
        <div class="mt-6 text-center">
          <%= render "devise/shared/links" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
  let routeIndex = 1;
  let rateIndex = 1;

  function addRoute() {
    const container = document.getElementById('routes-container');
    const newRoute = document.createElement('div');
    newRoute.className = 'route-item p-4 bg-gray-50 rounded-md';
    newRoute.innerHTML = `
      <div class="grid grid-cols-1 md:grid-cols-3 gap-3">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">From</label>
          <input type="text" name="user[trucking_company_attributes][routes][${routeIndex}][from]" 
                 class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                 placeholder="Johannesburg">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">To</label>
          <input type="text" name="user[trucking_company_attributes][routes][${routeIndex}][to]" 
                 class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                 placeholder="Cape Town">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Distance (km)</label>
          <input type="number" name="user[trucking_company_attributes][routes][${routeIndex}][distance]" 
                 class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                 placeholder="1400" min="0">
        </div>
      </div>
    `;
    container.appendChild(newRoute);
    routeIndex++;
  }

  function addRate() {
    const container = document.getElementById('rates-container');
    const newRate = document.createElement('div');
    newRate.className = 'rate-item p-4 bg-gray-50 rounded-md';
    newRate.innerHTML = `
      <div class="grid grid-cols-1 md:grid-cols-3 gap-3">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Rate Type</label>
          <select name="user[trucking_company_attributes][rates][${rateIndex}][type]" 
                  class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
            <option value="">Select type</option>
            <option value="per_km">Per Kilometer</option>
            <option value="flat">Flat Rate</option>
            <option value="hourly">Hourly</option>
          </select>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Rate Amount</label>
          <input type="number" name="user[trucking_company_attributes][rates][${rateIndex}][rate]" 
                 class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                 placeholder="2.50" step="0.01" min="0">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Currency</label>
          <select name="user[trucking_company_attributes][rates][${rateIndex}][currency]" 
                  class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
            <option value="ZAR" selected>ZAR (R)</option>
            <option value="USD">USD ($)</option>
          </select>
        </div>
      </div>
    `;
    container.appendChild(newRate);
    rateIndex++;
  }
</script>